    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.project.lindapang.mytoastresource.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />
    <Button
        android:id="@+id/btn_show_dialog1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示Dialog按钮1"
        />
    <Button
        android:id="@+id/btn_show_dialog2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示Dialog按钮2"
        />
    <Button
        android:id="@+id/btn_show_dialog3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示Dialog按钮3"
        />
